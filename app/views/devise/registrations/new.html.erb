
<div class="grow flex flex-col items-center justify-center">
  <h1 class="text-5xl">Craftology</h1>
  <h2 class="text-xl">Sign up</h2>
  <p>Sign up to save your discoveries!</p>
  <div class="max-w-sm w-full">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex flex-col gap-2 mb-2">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, autocomplete: "username", class: "rounded" %>
      </div>

      <div class="flex flex-col gap-2 mb-2">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded" %>
      </div>

      <div class="flex flex-col gap-2 mb-2">
        <div>
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "rounded" %>
      </div>

      <%= f.hidden_field :claim_id %>

      <div class="flex justify-center mt-4">
        <%= f.submit "Sign up", class: "px-4 py-2 rounded border cursor-pointer grow bg-gray-100" %>
      </div>
    <% end %>
  </div>

  <div class="underline mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>

<script>
  document.getElementById("user_claim_id").value = localStorage.getItem("craftology-claim-id")
</script>